<%= render "menu" %>
<table>
  <thead>
    <tr>
      <th>#</th>
      <th>title</th>
      <th>text</th>
      <th>comments</th>
      <th>edit</th>
      <th>delete</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %> 
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.comments.count %></td>
      <td><%= link_to "Show", article_path(article) %></td>
      <td><%= link_to "Edit", edit_article_path(article) %></td>
      <td><%= link_to "Delete", article, method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
